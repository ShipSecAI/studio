    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.1.0",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  }
